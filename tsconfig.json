{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@Components/*": ["src/components/*"],
      "@Pages/*": ["src/pages/*"],
      "@Hooks/*": ["src/hooks/*"],
      "@Routes/*": ["src/routes/*"],
      "@Services/*": ["src/services/*"],
      "@Types/*": ["src/types/*"],
      "@Utils/*": ["src/utils/*"],
      "@Validations/*": ["src/validations/*"],
      "@Styles/*": ["src/styles/*"]
    },
    "jsx": "react-jsx", // Update this to "react-jsx" for React 17+
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2015", // Use ES2015 or higher to support async/await
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./dist", // Specify the output directory for compiled files
    "rootDir": "./src" // Specify the root directory of your source file
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"] // Avoid processing these folders
}
