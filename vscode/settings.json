{
  "editor.formatOnSave": true, // Automatically format on save
  "typescript.autoImportSuggestions.enabled": true,
  "typescript.preferences.importModuleSpecifier": "relative", // or "non-relative"
  "editor.tabSize": 2, // Set tab size to 2 spaces
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Use Prettier for formatting
  "files.autoSave": "onWindowChange", // Auto-save files on window change
  "typescript.tsdk": "node_modules/typescript/lib", // Point to the local TypeScript version
  "eslint.enable": true, // Enable ESLint for linting
  "eslint.run": "onSave", // Run ESLint on save
  "eslint.autoFixOnSave": true, // Automatically fix ESLint issues on save
  "prettier.requireConfig": true, // Require Prettier configuration
  "editor.rulers": [80], // Add a line at 80 characters for readability
  "files.exclude": {
    "**/*.js": true, // Hide JS files if you're using TypeScript
    "**/node_modules": true // Hide node_modules
  }
}
